{% extends "DocumaticBundle::layout.html.twig" %}

{% trans_default_domain "documatic" %}

{% block documatic_head_style %}
	{{ parent() }}
	{% stylesheets filter="cssrewrite"
	'bundles/documaticeditor/css/documents.css'
	%}
	<link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
	{% endstylesheets %}
{% endblock %}

{% block documatic_page_class %}documents{% endblock %}

{% block documatic_page_title %}
	{% trans %}agreements.page_title{% endtrans %}
{% endblock %}

{% block documatic_page_nav %}
	<a class ="btn btn-primary pull-right" href="{{ path('documatic_document_create') }}">{{ "agreements.toolbar.create"|trans }}</a>
{% endblock %}

{% block documatic_content %}
	{% include "DocumaticEditorBundle:Document:documents.html.twig" %}
	{% include "DocumaticEditorBundle:Document:template.html.twig" %}
{% endblock %}

{% block documatic_foot_script %}
	{{ parent() }}
	{% javascripts
	'bundles/uamdatatables/vendor/mustache/mustache.min.js'
	'bundles/documaticeditor/vendor/bootbox/bootbox.min.js'
	'bundles/documaticeditor/vendor/jquery-form/jquery.form.min.js'
	'bundles/documaticeditor/vendor/epiceditor/epiceditor/js/epiceditor.min.js'
	'bundles/documaticeditor/js/documents.js'
	%}
	<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}
